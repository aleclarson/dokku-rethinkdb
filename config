#!/usr/bin/env bash
export RETHINKDB_IMAGE=${RETHINKDB_IMAGE:="rethinkdb"}
export RETHINKDB_IMAGE_VERSION=${RETHINKDB_IMAGE_VERSION:="2.1.1"}
export RETHINKDB_ROOT=/var/lib/dokku/services/rethinkdb

export PLUGIN_COMMAND_PREFIX="rethinkdb"
export PLUGIN_DATA_ROOT=${PLUGIN_DATA_ROOT:="$RETHINKDB_ROOT"}
export PLUGIN_DATASTORE_PORTS=(28015 29015 8080)
export PLUGIN_DEFAULT_ALIAS="RETHINKDB"
export PLUGIN_IMAGE=$RETHINKDB_IMAGE
export PLUGIN_IMAGE_VERSION=$RETHINKDB_IMAGE_VERSION
export PLUGIN_SCHEME="rethinkdb"
export PLUGIN_SERVICE="RethinkDB"
